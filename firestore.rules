rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Fonction helper pour vérifier si l'utilisateur est connecté
    function isSignedIn() {
      return request.auth != null;
    }

    // Fonction helper pour vérifier si l'utilisateur est le propriétaire du document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Fonction helper pour vérifier si l'utilisateur est Admin (basé sur l'email ou le custom claim si on en avait)
    // Note: Pour plus de sécurité, on devrait utiliser des Custom Claims, mais ici on vérifie l'email
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'anis.federe@gmail.com' || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    // --- RÈGLES UTILISATEURS ---
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // --- RÈGLES CONVERSATIONS ---
    match /conversations/{conversationId} {
      allow read: if (isSignedIn() && (request.auth.uid in resource.data.participants)) || isAdmin();
      
      allow create: if isSignedIn() && (
        (request.resource.data.participants.size() <= 2) || isAdmin()
      );

      allow update: if (isSignedIn() && (request.auth.uid in resource.data.participants)) || isAdmin();
      allow delete: if isAdmin();

      // --- RÈGLES MESSAGES (Sous-collection) ---
      match /messages/{messageId} {
        // On doit vérifier que l'utilisateur fait partie de la conversation PARENTE
        // Astuce : On ne peut pas facilement lire le parent ici sans coût supplémentaire.
        // Solution courante : On fait confiance au fait que si on ne peut pas LIRE la conversation (règle du dessus),
        // on ne pourra pas trouver l'ID pour lire les messages.
        // Mais pour l'écriture, on vérifie que l'auteur est bien l'utilisateur connecté.
        
        allow read: if isSignedIn(); // Sécurisé par la règle du parent (on ne peut pas lister les messages si on ne peut pas lire la conversation)
        allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
        allow update: if isSignedIn(); // Pour accepter/refuser les propositions
      }
    }
  }
}
